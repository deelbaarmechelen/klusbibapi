{
	"name" : "klusbibapi",
	"description" : "A REST API to access work tool resources for use in a work tools library",
	"keywords" : [
		"klusbib",
		"rest",
		"api"
	],
	"homepage" : "http://github.com/renardeau/klusbibapi",
	"license" : "AGPLv3",
	"authors" : [{
			"name" : "Bernard Butaye",
			"email" : "info@klusbib.be"
		}
	],
	"require" : {
		"php" : ">=5.5.0",
		"slim/slim" : "^3.1",
		"slim/php-view" : "^2.0",
		"monolog/monolog" : "^1.17",
        "tuupola/slim-jwt-auth": "^2.0",
        "tuupola/slim-basic-auth": "^2.0",
        "tuupola/base62": "^0.7.0",
        "intervention/image": "~2.0",
		"illuminate/database": "5.2.*",
		"robmorgan/phinx": "0.5.*",
		"vlucas/phpdotenv": "^2.4",
		"illuminate/console" : "5.2.*",
		"illuminate/events" : "5.2.*",
		"illuminate/filesystem" : "5.2.*",
		"illuminate/pagination" : "5.2.*",
		"ad7six/dsn" : "0.4.*",
		"ext-gd": "*"
	},
	"require-dev" : {
		"heroku/heroku-buildpack-php": "*",
		"phpunit/phpunit" : ">=4.8 < 6.0",
		"there4/slim-test-helpers": "v2.1.1",
		"fzaninotto/faker" : "~1.4"
	},
	"autoload" : {
		"psr-4" : {
			"Api\\" : "src/classes/"
		}
	},
	"autoload-dev" : {
		"psr-4" : {
			"Tests\\" : "tests/"
		}
	},
    "scripts": {
        "test": "vendor/bin/phpunit --verbose --bootstrap tests/bootstrap.php --coverage-text"
    }
}
